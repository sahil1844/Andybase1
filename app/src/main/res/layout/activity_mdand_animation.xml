<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginTop="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MDAndAnimation">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="53dp"
            android:layout_height="34dp"
            android:layout_marginEnd="10dp"
            android:onClick="mdimage"
            android:src="@drawable/back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:text="Material Design"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#737070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
        <ScrollView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintVertical_bias="0.582">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="Material EditText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/headingtext"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/mda_para1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext"/>

                <VideoView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:id="@+id/piechart"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/mda_para2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="Material Button"
                    android:textColor="@color/black"
                    android:textSize="@dimen/headingtext"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/mda_para3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext"/>

                <VideoView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:id="@+id/Materialbtn"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/mda_para4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext" />
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="Material Datepicker"
                    android:textColor="@color/black"
                    android:textSize="@dimen/headingtext"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/mda_para5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext"/>

                <VideoView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:id="@+id/Materialdate"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="125dp"
                    android:text="@string/mda_para6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/simpletext" />
            </LinearLayout>
        </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        android:background="#A8C3C3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Basics"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/unfillbasic"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillwidget"
                android:textStyle="bold"
                android:gravity="center"
                android:text="widgets"
                android:layout_weight="1"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfilladapter"
                android:textStyle="bold"
                android:text="Adpaters"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillcharts"
                android:textStyle="bold"
                android:text="Charts"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillanimation"
                android:text="Animation"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>