<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllLayouts">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="53dp"
            android:layout_height="34dp"
            android:paddingEnd="10dp"
            android:onClick="layoutssimage"
            android:layout_marginTop="13dp"
            android:src="@drawable/back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Layouts in Android"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:paddingEnd="40dp"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#737070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="relleyout"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Relative Layout"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:onClick="conleyout"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Constraints Layout"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="absleyout"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Absolute Layout"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:onClick="frmleyout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Frame Layout"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="tblleyout"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Table  Layout"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Layouts in Android UI Design"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para14"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Linear Layout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para3"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext" />
            <TextView
                android:id="@+id/linearAttributes"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:autoLink="all"
                android:textColorLink="#2D41ED"
                android:text="Attributes in details..."
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/linearlayout"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para1"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:src="@mipmap/linearver"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para2"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:src="@mipmap/linearhor"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="RelativeLayout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para5"
                android:textColor="@color/black"
                android:textSize="14dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/relativelay"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para4"
                android:textColor="@color/black"
                android:textSize="14dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/exrelative"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Constraint Layout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para6"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/constraintlay"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para7"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@mipmap/constraintlayex"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Absolute  Layout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para8"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:src="@mipmap/absolutelay"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para9"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@mipmap/absolutelayex"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Frame Layout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para10"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_180sdp"
                android:src="@mipmap/frameelay"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para11"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@mipmap/frameelayex"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Table Layout"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para12"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:src="@mipmap/tablelay"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/alllayout_para13"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_130sdp"
                android:src="@mipmap/tablelayex"
                android:layout_marginBottom="@dimen/_100sdp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/scrollIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        android:background="#A8C3C3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:onClick="basic1"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Basics"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/unfillbasic"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:onClick="widget1"
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillwidget"
                android:textStyle="bold"
                android:gravity="center"
                android:text="widgets"
                android:layout_weight="1"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:onClick="adapter1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfilladapter"
                android:textStyle="bold"
                android:text="Adpaters"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:onClick="charts1"
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillcharts"
                android:textStyle="bold"
                android:text="Charts"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:onClick="anim1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillanimation"
                android:text="Animation"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>