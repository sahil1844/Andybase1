<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_marginStart="1dp"
        android:onClick="barimage"
        android:layout_marginTop="13dp"
        android:src="@drawable/back"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Bars in android"
        android:textAllCaps="true"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#737070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar11" />

    <ScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="actbar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="ActionBar"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:onClick="toolbar"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="ToolBar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="seekbar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="SeekBar"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:onClick="diseekbar"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Discrete SeekBar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="ratingbar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="RatingBar"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:onClick="snackbar"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="SnackBar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal" >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:onClick="rseekbar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#A8C3C3"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="RangeSeekBar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="ActionBar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para1"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>

            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/actionbar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8sp"
                android:text="@string/bar_para2"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Toolbar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para3"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/toolbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para4"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8sp"
                android:text="Seekbar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para5"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/seekbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para6"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="Discrete Seekbar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para7"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/deseekbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para8"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="RatingBar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para9"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/ratingbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para10"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="SnackBar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para11"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/snackbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para12"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="RangeSeekBar"
                android:textColor="@color/black"
                android:textSize="@dimen/headingtext"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:text="@string/bar_para13"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"/>
            <VideoView
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/rengebar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="@dimen/_100ssp"
                android:text="@string/bar_para14"
                android:textColor="@color/black"
                android:textSize="@dimen/simpletext"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/scrollIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        android:background="#A8C3C3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Basics"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:onClick="bars"
                android:drawableTop="@mipmap/unfillbasic"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillwidget"
                android:textStyle="bold"
                android:gravity="center"
                android:onClick="widgets"
                android:text="widgets"
                android:layout_weight="1"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfilladapter"
                android:textStyle="bold"
                android:onClick="adapters"
                android:text="Adpaters"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillcharts"
                android:textStyle="bold"
                android:text="Charts"
                android:onClick="charts"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:drawableTop="@mipmap/unfillanimation"
                android:text="Animation"
                android:layout_weight="1"
                android:onClick="animations"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_8ssp"
                android:backgroundTint="#A8C3C3"
                android:textColor="@color/black" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>