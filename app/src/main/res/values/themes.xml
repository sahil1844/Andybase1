<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndyBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:statusBarColor">#A8C3C3</item>
    </style>

    <style name="Widget.Slopes.TextInputLayout.Form" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_form_outline</item>
        <item name="boxStrokeWidth">-15dp</item>
        <item name="boxStrokeWidthFocused">-15dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="Theme.AndyBase" parent="Base.Theme.AndyBase" />
</resources>